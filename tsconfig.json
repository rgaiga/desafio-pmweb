{
    "compilerOptions": {
        "target": "es2022",
        "module": "commonjs",
        "rootDir": "./",
        "baseUrl": "./",
        "resolveJsonModule": true,
        "sourceMap": true,
        "outDir": "dist/",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "paths": {
            "@controllers/*": ["src/controllers/*"],
            "@controllers": ["src/controllers"],
            "@errors/*": ["src/errors/*"],
            "@errors": ["src/errors"],
            "@middlewares/*": ["src/middlewares/*"],
            "@middlewares": ["src/middlewares"],
            "@models/*": ["src/models/*"],
            "@models": ["src/models"],
            "@routes/*": ["src/routes/*"],
            "@routes": ["src/routes"],
            "@services/*": ["src/services/*"],
            "@services": ["src/services"],
            "@utils/*": ["src/utils/*"],
            "@utils": ["src/utils"]
        }
    },
    "include": ["jest.config.ts", "__tests__/**/*", "src/**/*"],
    "exclude": ["**/__mocks__/**/*"]
}
